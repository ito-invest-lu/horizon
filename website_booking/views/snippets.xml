<odoo>
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[@class='o_panel_body']" position="inside">
            <t t-snippet="website_booking.s_bookings" string="Bookings" t-thumbnail="/website_booking/static/src/img/snippets_thumbs/s_bookings_snippet.svg"/>
        </xpath>
    </template>

    <template id="s_bookings" name="Bookings">
        <t t-call="website.s_dynamic_snippet_template">
            <t t-set="snippet_name" t-value="'s_bookings'"/>
            <t t-set="snippet_classes" t-value="'s_bookings_snippet'"/>
        </t>
    </template>

    <!--ASSETS-->

    <record id="website_event.s_bookings_000_scss" model="ir.asset">
        <field name="name">Bookings 000 SCSS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_booking/static/src/snippets/s_bookings/000.scss</field>
    </record>

    <record id="website_event.s_bookings_000_js" model="ir.asset">
        <field name="name">Bookings 000 JS</field>
        <field name="bundle">web.assets_frontend</field>
        <field name="path">website_booking/static/src/snippets/s_bookings/000.js</field>
    </record>
</odoo>