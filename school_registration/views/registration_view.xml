    <!-- Registration Tree View -->
    <record model="ir.ui.view" id="registration_tree_view">
      <field name="name">school.registration.tree</field>
      <field name="model">school.registration</field>
      <field name="arch" type="xml">
        <tree string="Registrations">
          <field name="year_id" />
          <field name="student_id" />
          <field name="employee_id" optional="hide" />
          <field name="state" />
          <field name="activity_ids" widget="list_activity" optional="show" />
          <field name="activity_user_id" optional="show" string="Activity by" widget="many2one_avatar_user"/>
        </tree>
      </field>
    </record>
  
    <!-- Registration Form View -->
    <record model="ir.ui.view" id="registration_form">
      <field name="name">school.registration.view</field>
      <field name="model">school.registration</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="registration">
          <header>
            <button name="to_draft" type="object" states="active,archived" string="Set to Draft" />
            <button name="activate" type="object" states="draft" string="Confirm Registration" class="oe_highlight" />
            <button name="archive" type="object" states="draft,active" string="Archive Registration" />
            <field name="state" widget="statusbar" statusbar_visible="draft,active,archived" />
          </header>
          <sheet>
            <div class="oe_button_box" name="button_box">
              <button name="action_open_student" class="oe_stat_button" type="object" icon="fa-user" string="Student"/>
            </div>
            <div class="container h_registration_dialog">
              <div class="row">
                <div class="h-100 d-inline-block" style="width: 150px;">
                  <field name="image_1920" readonly="1" widget="image" class="oe_left oe_inline" options="{&quot;preview_image&quot;: &quot;image_128&quot;, &quot;size&quot;: [150, 150]}"/>
                </div>
                <div class="col-8">
                  <h2>
                   <field name="name"/>
                  </h2>
                  <group>
                    <field name="student_id"/>
                    <field name="year_id" />
                    <field name="employee_id" />
                    <field name="contact_form_id"/>
                  </group>
                </div>
              </div>
              <notebook>
                <page string="Contact information" name="contact">
                  <button name="action_fill_partner_date" type="object" class="btn btn-primary" icon="fa-refresh">Update Contact Info</button>
                  <div class="card mt-4 mb-4 box-shadow">
                    <field name="contact_form_data_pretty" widget="ace" options="{'mode': 'python'}"/>
                  </div>
                </page>
                <page string="Registrations" name="registrations">
                  <field name="registration_form_ids">
                    <tree string="Registration Forms">
                      <field name="submission_date" />
                      <field name="submission_data" />
                    </tree>
                  </field>
                </page>
              </notebook>
            </div>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers"/>
            <field name="activity_ids" widget="mail_activity"/>
            <field name="message_ids" widget="mail_thread"/>
          </div>
        </form>
      </field>
    </record>
    
    <record id="view_registration_filter" model="ir.ui.view">
      <field name="name">registration.select</field>
      <field name="model">school.registration</field>
      <field name="arch" type="xml">
        <search string="Search registration">
          <field name="name" filter_domain="[('name', 'ilike',self)]" />
          <filter string="Draft" name="draft" domain="[('state','=','draft')]" />
          <filter string="Active" name="active" domain="[('state','=','active')]" />
          <filter string="Archived" name="archived" domain="[('state','=','archived')]" />
          <searchpanel>
            <field name="state" icon="fa-users" enable_counters="1" />
          </searchpanel>
        </search>
      </field>
    </record>
  
    <record id="action_registration_form" model="ir.actions.act_window">
      <field name="name">Registrations</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.registration</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{"search_default_current":1}</field>
      <field name="search_view_id" ref="view_registration_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Click to add a registration.
        </p>
        <p>
          Odoo helps you easily track all activities related to a registration.
        </p>
      </field>
    </record>
  
    <record id="action_registration_form_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="0" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="registration_tree_view" />
      <field name="act_window_id" ref="action_registration_form" />
    </record>
    <record id="action_registration_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="registration_form" />
      <field name="act_window_id" ref="action_registration_form" />
    </record>
    
    <!-- Top menu item -->
    
    <menuitem name="Registration" id="menu_main_registration" web_icon="event,static/description/icon.png" sequence="5"  groups="school_management.group_program_management"/>

    <menuitem id="menu_registration" parent="school_registration.menu_main_registration" action="action_registration_form" sequence="30" />

    <!-- Other things -->
    
    <!-- Add signature to Individual Bloc form view -->
    <record id="individual_bloc_eval_form" model="ir.ui.view">
        <field name="name">school.individual_bloc.reg.view</field>
        <field name="model">school.individual_bloc</field>
        <field name="inherit_id" ref="school_management.individual_bloc_form" />
        <field eval="30" name="priority" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='course_group_ids']" position="after">
                <group>
                    <field name="student_signature" widget="signature" />
                    <field name="student_signature_date" invisible="1" />
                </group>
            </xpath>
        </field>
    </record>
    
    <!-- Add program for student form view -->
    <record id="view_program_form_school" model="ir.ui.view">
        <field name="name">view.program.form.school.reg</field>
        <field name="model">school.individual_program</field>
        <field name="inherit_id" ref="school_management.individual_program_form" />
        <field eval="25" name="priority" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='state']" position="before">
                    <button string="Register PAE" type="object" name="register_pae" class="oe_highlight" context="{'default_program_id': active_id, 'default_student_id': student_id}" 
                                groups="school_management.group_employee" attrs="{'invisible': [('state','!=','progress')]}"/>
            </xpath>
            <xpath expr="//div[@id='paes']" position="after">
                <group>
                    <field name="student_signature" widget="signature" />
                    <field name="student_signature_date" invisible="1" />
                </group>
            </xpath>
        </field>
    </record>
    
    <record id="school_action_program_new" model="ir.actions.act_window">
        <field name="name">Program</field>
        <field name="res_model">school.individual_program</field>
        <field name="view_mode">form</field>
    </record>
    
    <!-- Add program for student form view -->
    <record id="view_student_form_school_docs" model="ir.ui.view">
        <field name="name">view.res.partner.form.school.docs</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="school_management.view_partners_form_school" />
        <field eval="25" name="priority" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button string="Assign Program" name="%(school_action_program_new)d" type="action" class="oe_highlight"
                        context="{'default_student_id': active_id}" groups="school_management.group_employee"/>
                </header>
            </xpath>
        </field>
    </record>

</odoo>