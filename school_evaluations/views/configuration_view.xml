<odoo>
    <data>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.evaluation</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="60"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">
                    <div class="app_settings_block" data-string="Evaluation" string="Evaluation" data-key="evaluation" groups="base.access_res_config_settings">
                        <h2>Evaluations</h2>
                        <div class="row mt16 o_settings_container" name="evaluation_setting_container">
                            <div class="col-12 col-lg-6 o_setting_box"
                                id="evaluation"
                                title="Configure evaluation that can be encoded by teachers.">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <span class="o_form_label">Open year for encoding</span>
                                    <div class="content-group">
                                        <div class="row mt16">
                                            <label string="Open Year" for="evaluation_current_year_id" class="col-lg-3 o_light_label"/>
                                            <field name="evaluation_current_year_id" />
                                        </div>
                                        <div class="row">
                                            <label string="Open Session" for="evaluation_open_session" class="col-lg-3 o_light_label"/>
                                            <field name="evaluation_open_session" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>    
    
        <record id="action_evaluation_config" model="ir.actions.act_window">
            <field name="name">Settings</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.config.settings</field>
            <field name="view_mode">form</field>
            <field name="target">inline</field>
            <field name="context">{'module' : 'evaluation'}</field>
        </record>
        
        <menuitem id="menu_action_evaluation_config" parent="menu_main_evaluation" action="action_evaluation_config" sequence="99" groups="base.group_configuration"/>
    </data>
</odoo>