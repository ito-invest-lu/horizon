          <filter name="bloc_2" string="Bloc 2" domain="[('source_bloc_level', '=', 2)]"/>
          <filter name="bloc_3" string="Bloc 3" domain="[('source_bloc_level', '=', 3)]"/>
          <filter name="master_1" string="Master 1" domain="[('source_bloc_level', '=', 4)]"/>
