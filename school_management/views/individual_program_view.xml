<odoo>
  
    
    <!-- Top menu item -->
    <menuitem name="Individuals Programs" id="menu_individual_bloc" icon="fa-book" web_icon="hr_recruitment,static/description/icon.png" sequence="62" groups="school_management.group_registration"/>

    <!--
    
        Individual Program
        
        -->

    <!-- Individual Program Tree View -->
    <record id="view_individual_program_tree" model="ir.ui.view">
      <field name="name">school.individual_program.tree</field>
      <field name="model">school.individual_program</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Individual Program">
          <field name="student_id" />
          <field name="source_program_id"/>
          <field name="required_credits" />
        </tree>
      </field>
    </record>
    
    <!-- Individual Program Form View -->
    <record model="ir.ui.view" id="individual_program_form">
      <field name="name">school.individual_program.view</field>
      <field name="model">school.individual_program</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Individual Program">
          <sheet>
            <field name="image" widget="image" class="oe_left oe_inline m-2" options="{&quot;preview_image&quot;: &quot;image&quot;, &quot;size&quot;: [250, 250]}"/>
            <widget name="web_ribbon" text="Cycle" bg_color="bg-warning"/>
            <div class="oe_title">
              <h1 class="pt-5"><field name="student_id"/></h1>
              <h5 class="o_row row no-gutters d-flex">
                  <div class="col">
                    <label for="year_id" invisible="1"/>
                    <span>Année de début de cycle :</span>
                    <span><field name="year_id"/></span>
                  </div>
              </h5>
              <h5 class="o_row row no-gutters d-flex">
                  <div class="col">
                    <label for="source_program_id" invisible="1"/>
                    <span>Cycle basé sur le profil d'enseignement :</span>
                    <span><field name="source_program_id"/></span>
                  </div>
              </h5>
              <h3 class="o_row row no-gutters d-flex">
                  <div class="col">
                    <label for="uid" class="oe_edit_only"/>
                    <small class="oe_grey" ><field name="uid"/></small>
                  </div>
              </h3>
              <field name="cycle_id" invisible="1"/>
              <field name="speciality_id" invisible="1"/>
            </div>
            <group col="4">
              <field name="required_credits" colspan="4" readonly="1"/>
            </group>
            <div id="paes" class="mb-4">
              <h2>Programmes Annuels de l'Etudiant (PAE)</h2>
              <field name="bloc_ids">
                <kanban quick_create="false" create="false">
                    <field name="uid"/>
                    <field name="year_id"/>
                    <field name="name" />
                    <field name="total_hours" />
                    <field name="total_credits" />
                    <templates>
                        <t t-name="kanban-box">
                            <div style="position: relative; border-top : 10px solid #28a745;">
                                <div class="oe_module_vignette">
                                  <div class="row">
                                    <div class="col-12">
                                      <field name="uid" />
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="col-12">
                                      <field name="name"/>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="col-6">
                                      Heures : <field name="total_hours"/>
                                    </div>
                                    <div class="col-6">
                                      ECTS : <field name="total_credits"/>
                                    </div>
                                  </div>
                                  <div class="row">
                                    <div class="col-9">
                                    </div>
                                    <div class="col-3">
                                        <button type="object" name="action_open_form" class="oe_highlight btn btn-primary">Open</button>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
              </field>
            </div>
            <div id="individual_cgs" class="mb-4">
              <h2>Unités d'enseignement</h2>
              <field name="course_group_summaries" widget="many2many_kanban">
                <kanban quick_create="false" create="false" delete="false" group_create="false">
                  <field name="uid"/>
                  <field name="name" />
                  <field name="responsible_id"/>
                  <field name="total_hours" />
                  <field name="total_credits" />
                  <templates>
                      <t t-name="kanban-box">
                            <div style="position: relative;width:100%;" t-attf-class="horizon_cgs">
                                <div class="o_kanban_record_top">
                                  <div class="row o_kanban_record_headings">
                                    <div class="col-12 col-md-2">
                                      <a type="object" name="action_open_form" class="oe_highlight btn btn-primary"><field name="uid"/></a>
                                    </div>
                                    <div class="col-12 col-md-7">
                                      <field name="name"/><br/>
                                      <i><field name="responsible_id"/></i>
                                    </div>
                                    
                                    <div class="col-2">
                                      Heures : <field name="total_hours"/>
                                      <br/>
                                      ECTS : <field name="total_credits"/>
                                    </div>
                                  </div>
                                </div>
                            </div>
                        </t>
                  </templates>
                </kanban>
              </field>
            </div>
            <!--<div id="program_cgs" class="mb-4">
              <h2>Unités d'enseignement du cycle</h2>
              <field name="course_group_ids">
                <tree string="Course Group" create="0" delete="0">
                  <field name="uid"/>
                  <field name="name"/>
                  <field name="total_hours" sum="hours_program"/>
                  <field name="total_credits" sum="credits_program"/>
                 </tree>
              </field>
            </div>-->
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>
    
    <record id="view_individual_program_filter" model="ir.ui.view">
      <field name="name">program.select</field>
      <field name="model">school.individual_program</field>
      <field name="arch" type="xml">
        <search string="Search Programs">
          <field name="student_id" domain="[('type', '=', 'contact')]"/>
          <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
          <separator/>
          <filter name="music" string="Musique" domain="[('domain_id', '=', 1)]"/>
          <filter name="theatre" string="Théatre" domain="[('domain_id', '=', 2)]"/>
          <separator/>
          <group expand="1" string="Group By">
            <filter string="Domain" name="domain_id_group" context="{'group_by':'domain_id'}" />
            <filter string="Cycle" name="cycle_id_group" context="{'group_by':'cycle_id'}" />
            <filter string="Section" name="section_id_group" context="{'group_by':'section_id'}" />
            <filter string="Track" name="track_id_group" context="{'group_by':'track_id'}" />
            <filter string="Speciality" name="speciality_id_group" context="{'group_by':'speciality_id'}" />
          </group>
        </search>
      </field>
    </record>
    
    <record id="action_individual_program_form" model="ir.actions.act_window">
      <field name="name">Individual Programs</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">school.individual_program</field>
      
      <field name="view_mode">tree,form</field>
      <field name="context">{}</field>
      <field name="search_view_id" ref="view_individual_program_filter" />
      <field name="help" type="html">
        <p class="oe_view_nocontent_create">
          Please add individual program from Student view.
        </p>
      </field>
    </record>
    
    <record id="action_individual_program_tree_view1" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_individual_program_tree" />
      <field name="act_window_id" ref="action_individual_program_form" />
    </record>
    
    <record id="action_individual_program_form_view2" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="individual_program_form" />
      <field name="act_window_id" ref="action_individual_program_form" />
    </record>
    
    <menuitem id="menu_individual_program_form" parent="menu_individual_bloc" action="action_individual_program_form" sequence="10" />

    <!--
    
        Individual Bloc
        
        -->

    <!-- Individual Bloc Tree View -->
    <record id="view_individual_bloc_tree" model="ir.ui.view">
      <field name="name">school.individual_bloc.tree</field>
      <field name="model">school.individual_bloc</field>
      <field eval="8" name="priority" />
      <field name="arch" type="xml">
        <tree string="Individual Bloc" create="false">
          <field name="year_id" />
          <field name="student_id" />
          <field name="source_bloc_name" />
          <field name="total_credits" />
          <field name="is_final_bloc" />
        </tree>
      </field>
    </record>
    
    <record id="act_program_2_course" model="ir.actions.act_window">
        <field name="name">Courses</field>
        <field name="res_model">school.individual_course</field>
        
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_bloc_id': active_id}</field>
        <field name="search_view_id" ref="view_individual_courses_filter" />
        <field name="help" type="html">
          <p class="oe_view_nocontent_create">
            Create a Course Group and add Courses to the program.
          </p>
        </field>
    </record>
    
    
    <record id="action_individual_bloc_course_tree_view" model="ir.actions.act_window.view">
      <field name="sequence" eval="1" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_individual_course_tree" />
      <field name="act_window_id" ref="act_program_2_course" />
    </record>
    
    <record id="action_individual_bloc_course_form_view" model="ir.actions.act_window.view">
      <field name="sequence" eval="2" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_individual_course_form" />
      <field name="act_window_id" ref="act_program_2_course" />
    </record>
    
    
    <!-- Individual Bloc Form View -->
    <record model="ir.ui.view" id="individual_bloc_form">
      <field name="name">school.individual_bloc.view</field>
      <field name="model">school.individual_bloc</field>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <form string="Individual Bloc">
          <sheet>
            <!--<div class="oe_button_box" name="button_box">
              <button class="oe_stat_button" icon="fa-list" type="action" name="%(school_management.act_program_2_course)d">
                <field string="Courses" name="course_count" widget="statinfo" />
              </button>
            </div>-->
            <field name="image" widget="image" class="oe_left oe_inline m-2" options="{&quot;preview_image&quot;: &quot;image&quot;, &quot;size&quot;: [250, 250]}"/>
            <widget name="web_ribbon" text="PAE" />
            <div class="oe_title">
              <h1 class="pt-5"><field name="name"/></h1>
              <h3 class="o_row row no-gutters d-flex">
                  <div class="col">
                    <label for="source_bloc_id" invisible="1"/>
                    <span class="oe_grey"> Based on </span>
                    <span class="oe_grey" ><field name="source_bloc_id"/></span>
                  </div>
              </h3>
              <h3 class="o_row row no-gutters d-flex">
                  <div class="col">
                    <label for="uid" class="oe_edit_only"/>
                    <small class="oe_grey" ><field name="uid"/></small>
                  </div>
              </h3>
            </div>
            <group col="4">
              <field name="program_id" colspan="4"/>
              <field name="year_id"/>
              <field name="is_final_bloc" />
              <field name="total_hours" />
              <field name="total_credits" />
            </group>
            <field name="course_group_ids">
              <tree string="Course Groups" context="{'default_bloc_id':active_id}">
                <field name="uid"/>
                <field name="name" />
                <field name="total_hours" string="Hrs"/>
                <field name="total_credits" />
                <field name="source_course_group_id" invisible="1"/>
              </tree>
            </field>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids" widget="mail_followers" />
            <field name="message_ids" widget="mail_thread" />
          </div>
        </form>
      </field>
    </record>

    <record id="view_individual_bloc_filter" model="ir.ui.view">
      <field name="name">bloc.select</field>
      <field name="model">school.individual_bloc</field>
      <field name="arch" type="xml">
        <search string="Search Blocs">
          <field name="student_id" domain="[('type', '=', 'contact')]"/>
          <filter string="Archived" name="inactive" domain="[('active','=',False)]"/>
          <field name="source_bloc_id" string="Programme"/>
          <field name="source_bloc_domain_id"/>
          <filter name="bloc_1" string="Bac 1" domain="[('source_bloc_level', '=', 1)]"/>
          <filter name="bloc_2" string="Bac 2" domain="[('source_bloc_level', '=', 2)]"/>
          <filter name="bloc_3" string="Bac 3" domain="[('source_bloc_level', '=', 3)]"/>
          <filter name="bloc_4" string="Master 1" domain="[('source_bloc_level', '=', 4)]"/>
          <filter name="bloc_5" string="Master 2" domain="[('source_bloc_level', '=', 5)]"/>
          <filter name="agg" string="Agregation" domain="[('source_bloc_level', '=', 6)]"/>
          <separator/>
          <filter name="music" string="Musique" domain="[('source_bloc_domain_id', '=', 1)]"/>
          <filter name="theatre" string="Théatre" domain="[('source_bloc_domain_id', '=', 2)]"/>
          <separator/>
          <filter string="Current Year" name="current" domain="[('year_sequence','=','current')]" />
          <filter string="Next Year" name="next" domain="[('year_sequence','=','next')]" />
          <filter string="Previous Year" name="previous" domain="[('year_sequence','=','previous')]" />
          <group expand="1" string="Group By">
            <filter string="Domain" name="source_bloc_domain_id_group" context="{'group_by':'source_bloc_domain_id'}" />
            <filter string="Cycle" name="source_bloc_cycle_id_group" context="{'group_by':'source_bloc_cycle_id'}" />
            <filter string="Section" name="source_bloc_section_id_group" context="{'group_by':'source_bloc_section_id'}" />
            <filter string="Track" name="source_bloc_track_id_group" context="{'group_by':'source_bloc_track_id'}" />
            <filter string="Speciality" name="source_bloc_speciality_id_group" context="{'group_by':'source_bloc_speciality_id'}" />
          </group>
        </search>
      </field>
    </record>

    <record id="action_individual_bloc_form" model="ir.actions.act_window">
