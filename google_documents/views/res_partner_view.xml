<odoo>
        
        <!-- Add program for student form view -->
        <record id="view_res_partner_form_google_docs" model="ir.ui.view">
            <field name="name">view.res.partner.form.google.docs</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="priority">100</field>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='email']" position="after">
                    <field name="google_drive_folder_id"/>
                </xpath>
                <xpath expr="//notebook[last()]" position="inside">
                    <page name="google_document_list" string="Google Documents" attrs="{'invisible': [('google_drive_folder_id','=',False)]}" >
                        <field name="google_drive_connected" />
                        <field name="google_drive_files">
                            <tree string="Google Documents">
                                <field name="name" />
                                <field name="description" />
                                <field name="url" widget="url" />
                            </tree>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
        
    
</odoo>